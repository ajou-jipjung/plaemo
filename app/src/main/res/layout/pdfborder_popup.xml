<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorskybule"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">


    <!-- Notice -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/border_msg"
            android:layout_width="218dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="63dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/binggrae"
            android:text="팬의 굵기를 설정해주세요."
            android:textColor="@color/colorskybuleDark"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/set_border"
            android:hint="굵기 입력"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:inputType="number" />
    </RelativeLayout>


    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />



    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:fontFamily="@font/binggrae"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="mOnCloseCancle"
            android:padding="16dp"
            android:text="취소"
            android:background="#00ff0000"
            android:textColor="@color/colorskybuleDark"
            android:textSize="15dp" />

        <Button
            android:fontFamily="@font/binggrae"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="mOnCloseSetting"
            android:padding="16dp"
            android:text="설정완료"
            android:background="#00ff0000"
            android:textColor="@color/colorskybuleDark"
            android:textSize="15dp" />


    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>