<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memolist_xml"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:background="@color/colordoublewhiteyellow">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/memopage"
            android:layout_width="159dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="59dp"
            android:layout_marginEnd="177dp"
            android:includeFontPadding="false"
            android:text="Page"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/memodate"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="224dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="27dp"
            android:gravity="right"
            android:text="날짜"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/memocontent"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="59dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="0dp"
            android:includeFontPadding="false"
            android:text="content"
            android:fontFamily="@font/ridibatang"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/memo_edit"
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="373dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_create_24px" />

    </RelativeLayout>

</LinearLayout>